@{
    @model List<LanguageBlogs.Models.Blog>

    ViewBag.Title = "Home";
}

<div class="row text-center">
    <h1>Language Blogs</h1>
    <p class="lead">This is a summary of blog entries in the language learning community.</p>
</div>

<div class="container">

    @foreach (var blog in Model)
    {
        <div class="row text-center">
            <div class="col">
                <h2><a href="@blog.Link">@blog.Title</a></h2>
            </div>
            <div class="col text-center">
                <p>
                    @blog.Description
                </p>
            </div>

            <div class="row">
                @foreach (var post in blog.Posts)
                {
                    <div class="col-xs-8 col-sm-6">
                        <p>@post.Title</p>
                        <p>
                            @post.Preview
                        </p>
                    </div>
                }
            </div>
        </div>
    }

</div>